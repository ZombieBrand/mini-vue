{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "types": [
      "jest"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "noImplicitAny": false, 
    "skipLibCheck": true, 
    "paths":{
      "@mini-vue/*":["./packages/*/src"]
    }
  },
  "include": ["packages/*/src", "packages/*/tests"]
}